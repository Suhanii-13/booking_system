<% layout('/layouts/boilerplate') -%>

<div class="container mt-5">
  <h3 class="text-center">Seminar Hall Bookings</h3>
  <div class="row">
    <% for (let booking of bookings) { %>
    <div class="col-md-4 mb-4">
      <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
          <h5 class="card-title"><%= booking.organizerName %></h5>
          <p class="card-text">
            <strong>Department:</strong> <%= booking.department %>
          </p>
          <p class="card-text">
            <strong>Event Details:</strong> <%= booking.eventDetails %>
          </p>
          <p class="card-text">
            <strong>Chief Guests Expected:</strong> <%=
            booking.chiefGuestsExpected %>
          </p>
          <p class="card-text">
            <strong>Start Time:</strong> <%= booking.startTime %>
          </p>
          <p class="card-text">
            <strong>End Time:</strong> <%= booking.endTime %>
          </p>
          <p class="card-text">
            <strong>Contact Number:</strong> <%= booking.contactNumber %>
          </p>
          <p class="card-text">
            <strong>Tools Required:</strong> <%= booking.tools %>
          </p>

          <div class="d-flex justify-content-between mt-3">
            <form
              action="/approve/<%= booking._id %>"
              method="POST"
              class="me-2"
            >
              <button type="submit" class="btn btn-success">Approve</button>
            </form>
            <form action="/reject/<%= booking._id %>" method="POST">
              <button type="submit" class="btn btn-danger">Reject</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
